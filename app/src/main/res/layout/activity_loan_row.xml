<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L'Île aux trésors"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/itemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1978"
        android:layout_below="@+id/itemTitle"
        android:layout_alignStart="@+id/itemTitle" />

    <TextView
        android:id="@+id/itemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R.L. Stevenson"
        android:layout_below="@+id/itemDate"
        android:layout_alignStart="@+id/itemDate" />

    <TextView
        android:id="@+id/itemReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_return"
        android:layout_marginEnd="62dp"
        android:layout_below="@+id/itemTitle"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/itemReturnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/01/2017"
        android:textColor="@android:color/black"
        android:layout_below="@+id/itemReturn"
        android:layout_alignStart="@+id/itemReturn" />
</RelativeLayout>